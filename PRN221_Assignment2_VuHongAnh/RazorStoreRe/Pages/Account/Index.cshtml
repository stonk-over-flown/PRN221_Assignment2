@page
@model RazorStoreRe.Pages.Account.IndexModel

@{
    ViewData["Title"] = "Index";
    int count = 0;
}

@if (HttpContext.Session.GetInt32("role") == null)
{
    Response.Redirect("/Index");
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].HomeAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].AccountEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].AccountPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].AccountStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Account)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountPassword)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.RoleName[count])
                </td>
                @if (HttpContext.Session.GetInt32("role") == 1)
                {
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.AccountId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.AccountId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.AccountId">Delete</a>
                    </td>
                }
            </tr>
            count++;
        }
    </tbody>
</table>
