@page
@model RazorStoreRe.Pages.Account.EditModel

@{
    ViewData["Title"] = "Edit";
}

@if (HttpContext.Session.GetInt32("role") == null)
{
    Response.Redirect("/Index");
}

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Account.AccountId" />
            <div class="form-group">
                <label asp-for="Account.FullName" class="control-label"></label>
                <input asp-for="Account.FullName" class="form-control" />
                <span asp-validation-for="Account.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.RoleId" class="control-label"></label>
                <select asp-for="Account.RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                <span asp-validation-for="Account.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.DateOfBirth" class="control-label"></label>
                <input asp-for="Account.DateOfBirth" class="form-control" />
                <span asp-validation-for="Account.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.PhoneNumber" class="control-label"></label>
                <input asp-for="Account.PhoneNumber" class="form-control" />
                <span asp-validation-for="Account.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.HomeAddress" class="control-label"></label>
                <input asp-for="Account.HomeAddress" class="form-control" />
                <span asp-validation-for="Account.HomeAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.AccountEmail" class="control-label"></label>
                <input asp-for="Account.AccountEmail" class="form-control" />
                <span asp-validation-for="Account.AccountEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.AccountPassword" class="control-label"></label>
                <input asp-for="Account.AccountPassword" class="form-control" />
                <span asp-validation-for="Account.AccountPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.AccountStatus" class="control-label"></label>
                <input asp-for="Account.AccountStatus" class="form-control" />
                <span asp-validation-for="Account.AccountStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
